{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "labels": ["dependencies"],
  "schedule": ["after 8am on monday"],
  "enabledManagers": ["npm"],
  "separateMajorMinor": false,
  "enabled": true,
  "packageRules": [
    {
      "groupName": "all dependencies",
      "groupSlug": "all",
      "matchPackageNames": ["*"],
      "matchFileNames": ["src/package.json"]
    }
  ],
  "lockFileMaintenance": {
    "enabled": false
  }
}
